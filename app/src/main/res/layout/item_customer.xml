<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <com.bhuvanesh.mineralwater.widget.CircularNetworkImageView
            android:id="@+id/imageview_profile_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_img" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageview_profile_icon"
            android:layout_toRightOf="@id/imageview_profile_icon"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Moorthy" />

        <TextView
            android:id="@+id/textview_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            tools:text="02-02-2017" />

        <TextView
            android:id="@+id/textview_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_name"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imageview_profile_icon"
            android:layout_toRightOf="@id/imageview_profile_icon"
            android:autoLink="all"
            android:linksClickable="true"
            android:text=""
            tools:text="9876543210" />
    </RelativeLayout>
</android.support.v7.widget.CardView>